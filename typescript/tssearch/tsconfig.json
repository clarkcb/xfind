{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]}
