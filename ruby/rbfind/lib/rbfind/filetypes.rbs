module RbFind
  module FileType
    UNKNOWN: 0
    ARCHIVE: 1
    AUDIO: 2
    BINARY: 3
    CODE: 4
    FONT: 5
    IMAGE: 6
    TEXT: 7
    VIDEO: 8
    XML: 9

    NAMES: ::Array[:unknown | :archive | :audio | :binary | :code | :font | :image | :text | :video | :xml]

    def self?.from_name: (String name) -> FileType

    def self?.from_sym: (Symbol sym) -> FileType

    def self?.to_name: (FileType file_type) -> String
  end

