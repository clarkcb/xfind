    def initialize: () -> void

    def set_file_type_maps_from_json: () -> void

    def get_file_type: (String file_name) -> FileType

    def archive_file?: (String file_name) -> bool

    def audio_file?: (String file_name) -> bool

    def binary_file?: (String file_name) -> bool

    def code_file?: (String file_name) -> bool

    def font_file?: (String file_name) -> bool

    def image_file?: (String file_name) -> bool

    def text_file?: (String file_name) -> bool

    def video_file?: (String file_name) -> bool

    def xml_file?: (String file_name) -> bool
  end
end
